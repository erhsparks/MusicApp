<h2><%= @band.name == "" ? "Add band" : @band.name %></p>

<form action="<%= band_url(band.id) %>"
      method="POST">

  <input type="hidden"
         name="authenticity_token"
         value="<%= form_authenticity_token %>">

  <label for="band_name">Band name:</label>
  <input id="band_name"
         type="text"
         name="band[name]"
         value="<%= @band.name %>">

  <input type="submit"
         value="<%= @band.name == "" : "Add new band!" : "Update!" %>"
</form>
