<% title = (action == session_url ? "Log in" : "Sign up for a new account!") %>

<h2><%= title %></h2>

<form action="<%= action %>"
      method="POST">

  <input type="hidden"
         name="authenticity_token"
         value="<%= form_authenticity_token %>">

  <label for="email">Email address: </label>
  <input id="email"
         type="text"
         name="user[email]"
         value="<%= user.email %>">

  <label for="password">Password: </label>
  <input id="password"
         type="password"
         name="user[password]"
         value="<%= user.password %>">

  <input type="submit"
         value="<%= action == session_url ? "Log me in!" : "Sign up!" %>">
</form>
