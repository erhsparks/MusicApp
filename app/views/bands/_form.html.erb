<% url = band.persisted? ? band_url(band) : bands_url %>
<% method = band.persisted? ? "PATCH" : "POST" %>

<h2><%= band.name ? band.name : "Add a band" %></h2>

<form action="<%= url %>"
      method="POST">

  <input type="hidden"
         name="_method"
         value="<%= method %>">

  <input type="hidden"
         name="authenticity_token"
         value="<%= form_authenticity_token %>">

  <label for="band_name">Band name:</label>
  <input id="band_name"
         type="text"
         name="band[name]"
         value="<%= band.name %>">

  <input type="submit"
         value="<%= band.name ? "Update!" : "Add band!" %>">
</form>

<%= button_to "Cancel", bands_url %>
